<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.wpkg.cli.android.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="269dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center">
        <TextView
                android:text="Enter Authtoken:"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtAuthtoken"/>
        <TextView
                android:text="Enter IP:"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" app:textAllCaps="false"/>
        <EditText
                android:text="s1.ct8.pl:3218"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtIP"/>
        <Button
                android:text="Connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnConnect"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>